# Include all Python files in arda_cli package
recursive-include arda_cli *.py

# Include arda_lib directory (Nix operations library)
recursive-include arda_lib *.py
recursive-include arda_lib *

# Include configuration files
include arda_cli/arda.toml

# Include package metadata
include arda_cli/py.typed

# Include templates for flakes create command
include arda_cli/commands/templates/arda/default/*.nix
include arda_cli/commands/templates/arda/default/*.md
recursive-include arda_cli/commands/templates arda *

# Include all subdirectories
recursive-include arda_cli *

# Exclude build artifacts and cache
prune build
prune dist
prune *.egg-info
exclude .gitignore
